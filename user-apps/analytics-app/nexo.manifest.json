{
  "$schema": "../../packages/core/nexo.schema.json",
  "id": "analytics-app",
  "name": "数据分析",
  "version": "1.0.0",
  "description": "强大的数据分析和可视化工具",
  "author": "User",
  "icon": "bar-chart-3",
  "tags": ["分析", "数据", "报表"],
  "priority": 20,

  "basePath": "/app/analytics",
  "framework": "react",
  "entry": "./src/main.tsx",

  "permissions": [
    {
      "id": "analytics:view",
      "name": "查看分析",
      "description": "查看数据分析仪表盘"
    },
    {
      "id": "analytics:export",
      "name": "导出数据",
      "description": "导出分析报告"
    },
    {
      "id": "analytics:realtime",
      "name": "实时监控",
      "description": "访问实时监控功能"
    }
  ],

  "menus": [
    {
      "id": "analytics",
      "label": "数据分析",
      "path": "/app/analytics",
      "icon": "bar-chart-3",
      "order": 20,
      "badge": "New",
      "children": [
        {
          "id": "analytics-dashboard",
          "label": "仪表盘",
          "path": "/app/analytics/dashboard",
          "icon": "activity",
          "permissions": ["analytics:view"]
        },
        {
          "id": "analytics-reports",
          "label": "报告",
          "path": "/app/analytics/reports",
          "icon": "file-text"
        },
        {
          "id": "analytics-realtime",
          "label": "实时监控",
          "path": "/app/analytics/realtime",
          "icon": "radio",
          "permissions": ["analytics:realtime"]
        }
      ]
    }
  ],

  "routes": [
    {
      "path": "/app/analytics",
      "entry": "./src/pages/Dashboard.tsx",
      "meta": { "title": "数据分析" }
    },
    {
      "path": "/app/analytics/dashboard",
      "entry": "./src/pages/Dashboard.tsx",
      "meta": { "title": "仪表盘", "permissions": ["analytics:view"] }
    },
    {
      "path": "/app/analytics/reports",
      "entry": "./src/pages/Reports.tsx",
      "meta": { "title": "报告" }
    },
    {
      "path": "/app/analytics/realtime",
      "entry": "./src/pages/Realtime.tsx",
      "meta": { "title": "实时监控", "permissions": ["analytics:realtime"] }
    }
  ]
}

