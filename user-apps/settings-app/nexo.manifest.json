{
  "$schema": "../../packages/core/nexo.schema.json",
  "id": "settings-app",
  "name": "系统设置",
  "version": "1.0.0",
  "description": "管理系统和用户设置",
  "author": "User",
  "icon": "settings",
  "tags": ["设置", "系统"],
  "priority": 100,

  "basePath": "/app/settings",
  "framework": "react",
  "entry": "./src/main.tsx",

  "permissions": [
    {
      "id": "settings:profile",
      "name": "个人资料",
      "description": "修改个人资料"
    },
    {
      "id": "settings:security",
      "name": "安全设置",
      "description": "修改安全设置"
    }
  ],

  "menus": [
    {
      "id": "settings",
      "label": "设置",
      "path": "/app/settings",
      "icon": "settings",
      "order": 100,
      "children": [
        {
          "id": "settings-profile",
          "label": "个人资料",
          "path": "/app/settings/profile",
          "icon": "user"
        },
        {
          "id": "settings-notifications",
          "label": "通知",
          "path": "/app/settings/notifications",
          "icon": "bell"
        },
        {
          "id": "settings-security",
          "label": "安全",
          "path": "/app/settings/security",
          "icon": "shield",
          "permissions": ["settings:security"]
        },
        {
          "id": "settings-appearance",
          "label": "外观",
          "path": "/app/settings/appearance",
          "icon": "palette"
        }
      ]
    }
  ],

  "routes": [
    {
      "path": "/app/settings",
      "entry": "./src/pages/Profile.tsx",
      "meta": { "title": "设置" }
    },
    {
      "path": "/app/settings/profile",
      "entry": "./src/pages/Profile.tsx",
      "meta": { "title": "个人资料" }
    },
    {
      "path": "/app/settings/notifications",
      "entry": "./src/pages/Notifications.tsx",
      "meta": { "title": "通知设置" }
    },
    {
      "path": "/app/settings/security",
      "entry": "./src/pages/Security.tsx",
      "meta": { "title": "安全设置", "permissions": ["settings:security"] }
    },
    {
      "path": "/app/settings/appearance",
      "entry": "./src/pages/Appearance.tsx",
      "meta": { "title": "外观设置" }
    }
  ]
}

