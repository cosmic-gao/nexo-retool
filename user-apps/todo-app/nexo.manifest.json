{
  "$schema": "../../packages/core/nexo.schema.json",
  "id": "todo-app",
  "name": "待办事项",
  "version": "1.0.0",
  "description": "简单易用的待办事项管理应用",
  "author": "User",
  "icon": "list-todo",
  "tags": ["效率", "任务管理"],
  "priority": 10,

  "basePath": "/app/todo",
  "framework": "react",
  "entry": "./src/main.tsx",

  "assets": {
    "js": ["./dist/index.js"],
    "css": ["./dist/index.css"]
  },

  "permissions": [
    {
      "id": "todo:read",
      "name": "查看待办",
      "description": "查看待办事项列表"
    },
    {
      "id": "todo:write",
      "name": "编辑待办",
      "description": "创建、编辑、删除待办事项"
    },
    {
      "id": "todo:admin",
      "name": "管理待办",
      "description": "管理所有用户的待办事项"
    }
  ],

  "menus": [
    {
      "id": "todo-app",
      "label": "待办事项",
      "path": "/app/todo",
      "icon": "list-todo",
      "order": 10,
      "children": [
        {
          "id": "todo-list",
          "label": "任务列表",
          "path": "/app/todo/list",
          "icon": "check-square",
          "permissions": ["todo:read"]
        },
        {
          "id": "todo-calendar",
          "label": "日历视图",
          "path": "/app/todo/calendar",
          "icon": "calendar",
          "permissions": ["todo:read"]
        },
        {
          "id": "todo-stats",
          "label": "统计",
          "path": "/app/todo/stats",
          "icon": "bar-chart-3"
        },
        {
          "id": "todo-settings",
          "label": "设置",
          "path": "/app/todo/settings",
          "icon": "settings",
          "permissions": ["todo:admin"]
        }
      ]
    }
  ],

  "routes": [
    {
      "path": "/app/todo",
      "entry": "./src/pages/Home.tsx",
      "meta": { "title": "待办事项" }
    },
    {
      "path": "/app/todo/list",
      "entry": "./src/pages/List.tsx",
      "meta": { "title": "任务列表", "permissions": ["todo:read"] }
    },
    {
      "path": "/app/todo/calendar",
      "entry": "./src/pages/Calendar.tsx",
      "meta": { "title": "日历视图", "permissions": ["todo:read"] }
    },
    {
      "path": "/app/todo/stats",
      "entry": "./src/pages/Stats.tsx",
      "meta": { "title": "统计" }
    },
    {
      "path": "/app/todo/settings",
      "entry": "./src/pages/Settings.tsx",
      "meta": { "title": "设置", "permissions": ["todo:admin"] }
    }
  ],

  "lifecycle": {
    "bootstrap": "./src/bootstrap.ts",
    "mount": "./src/mount.ts",
    "unmount": "./src/unmount.ts"
  }
}

